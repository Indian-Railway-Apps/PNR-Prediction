<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/trdate"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/empty_calendar"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/travel_date"
            android:layout_width="45sp"
            android:layout_height="22sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="28"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/travel_month"
            android:layout_width="45sp"
            android:layout_height="12sp"
            android:gravity="top|center_horizontal"
            android:text="Jan"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/trdate"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pnr_no"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="6"
            android:layout_marginTop="2sp"
            android:gravity="left|center_vertical"
            android:text="1234567890"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="4"
            android:layout_marginTop="1sp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/current_status"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:text="Status: WL33"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/last_update"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="left|center_vertical"
                android:text="Last checked : 28 Jan"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>